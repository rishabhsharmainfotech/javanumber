<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTheme_rrrrr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500_rrrrr</item>
        <item name="colorPrimaryVariant">@color/purple_700_rrrrr</item>
        <item name="colorOnPrimary">@color/white_rrrrr</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200_rrrrr</item>
        <item name="colorSecondaryVariant">@color/teal_700_rrrrr</item>
        <item name="colorOnSecondary">@color/black_rrrrr</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/status_bar_color_rrrrr</item>
        <!-- Customize your theme here. -->
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>


    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#000</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/button_color1_rrrrr</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#FFFF3F3C</item> <!-- checkbox text color -->
    </style>
    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white_rrrrr</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingStart">0dip</item>
    </style>
</resources>