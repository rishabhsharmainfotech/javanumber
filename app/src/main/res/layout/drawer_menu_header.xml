<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_gradient_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Put Invisible Layout Here  -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/transparent_rrrrr"
            app:cardCornerRadius="35dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/logo" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_userDName_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_mobile_nav_num_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/rrrrr_notiSwitchBtn_rrrrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_border"
                android:checked="true"
                android:paddingStart="8dp"
                android:paddingEnd="5dp"
                android:text="App Notification"
                android:textColor="@color/black_rrrrr"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/golden_color" />
</LinearLayout>