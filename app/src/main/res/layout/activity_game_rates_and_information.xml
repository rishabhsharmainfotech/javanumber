<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_rrrrr"
    android:orientation="vertical"
    tools:context="com.example.myapplication.e.b.activity_game_rates_and_information">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/rrrrr_appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/rrrrr_toolbar_rrrrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_gradient_background"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:titleTextColor="@color/black_rrrrr" />
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_dataConText_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warn_red_rrrrr"
            android:elevation="1dp"
            android:padding="5dp"
            android:text="@string/no_net_rrrrr"
            android:textColor="@color/white_rrrrr"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/rrrrr_singleD_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_gradient_background2"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="@string/single_digit_rrrrr"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_single_d_v_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center|center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black_rrrrr" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rrrrr_jodi_d_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_gradient_background2"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="@string/jodi_digit_rrrrr"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_jodi_d_value_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center|center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black_rrrrr" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rrrrr_single_p_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_gradient_background2"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="@string/single_pana_rrrrr"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_single_p_v_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center|center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black_rrrrr" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rrrrr_double_d_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_gradient_background2"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingHorizontal="10dp"

                android:paddingVertical="8dp"
                android:text="@string/double_digit_rrrrr"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_double_d_v_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center|center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black_rrrrr" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rrrrr_triple_d_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_gradient_background2"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="@string/triple_digit_rrrrr"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_triple_d_v_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center|center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black_rrrrr" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rrrrr_half_s_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_gradient_background2"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="@string/half_sangam_rrrrr"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_half_s_v_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black_rrrrr" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rrrrr_full_s_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_gradient_background2"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="@string/full_sangam_rrrrr"
                android:textColor="@color/black_rrrrr" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rrrrr_full_s_v_rrrrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center|center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black_rrrrr" />
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rrrrr_icon_rrrrr"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:visibility="gone"
            app:cardCornerRadius="45dp"
            app:cardElevation="0dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/main_gradient_background2"
                android:src="@drawable/logo" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rrrrr_how_to_learn_card_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white_rrrrr">

            <LinearLayout
                android:id="@+id/rrrrr_ll_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingVertical="5dp">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/rrrrr_howToPlayText_rrrrr"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:textColor="@color/black_rrrrr"
                        android:textSize="20sp" />
                </ScrollView>
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/rrrrr_progressBar_rrrrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
