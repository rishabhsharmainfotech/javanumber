<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_background"
    tools:context="com.example.myapplication.e.b.activity_change_password">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rrrrr_backIcon_rrrrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:padding="20dp"
        android:visibility="gone"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="backBtn"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rrrrr_dataConText_rrrrr"
        android:text="@string/no_net_rrrrr"
        android:textColor="@color/white_rrrrr"
        android:background="@color/warn_red_rrrrr"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_below="@id/rrrrr_backIcon_rrrrr"
        android:elevation="1dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                app:cardBackgroundColor="@color/transparent_rrrrr"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginHorizontal="15dp"
                android:text="@string/change_pass_rrrrr"
                android:textColor="@color/black_rrrrr"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rounded_edittext_focused2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rrrrr_inputNewPass_rrrrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent_rrrrr"
                    android:drawableStart="@drawable/ic_lock_icon_01"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/edittextcolor_rrrrr"
                    android:hint="@string/new_passs_rrrrr"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="12dp"
                    android:singleLine="true"
                    android:textColor="@color/edittextcolor_rrrrr"
                    android:textColorHint="@color/edittextcolor_rrrrr"
                    android:textCursorDrawable="@drawable/ic_cursor"
                    android:textStyle="bold"
                    tools:targetApi="m" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rrrrr_pass_toggle_rrrrr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="20dp"
                    android:onClick="passToggle"
                    android:src="@drawable/ic_baseline_visibility_24"
                    android:tint="@color/edittextcolor_rrrrr" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rounded_edittext_focused2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rrrrr_inputConformPass_rrrrr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_rrrrr"
                    android:drawableStart="@drawable/ic_lock_icon_01"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/edittextcolor_rrrrr"
                    android:hint="@string/conform_pass_rrrrr"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="12dp"
                    android:singleLine="true"
                    android:textColor="@color/edittextcolor_rrrrr"
                    android:textColorHint="@color/edittextcolor_rrrrr"
                    android:textCursorDrawable="@drawable/ic_cursor"
                    android:textStyle="bold"
                    tools:targetApi="m" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rrrrr_passToggleEyeConf_rrrrr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="20dp"
                    android:onClick="passToggleConf"
                    android:src="@drawable/ic_baseline_visibility_24"
                    android:tint="@color/edittextcolor_rrrrr" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/button_color1_rrrrr"
                android:onClick="GoChangePassBtn"
                android:padding="10dp"
                android:paddingVertical="10dp"
                android:text="@string/next_rrrrr"
                android:textAllCaps="false"
                android:textColor="@color/btn_txt_rrrrr"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                tools:ignore="UsingOnClickInXml" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rrrrr_progressBar_rrrrr"
        android:indeterminateTint="@color/edittextcolor_rrrrr"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>