<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_rrrrr"
    android:orientation="vertical"
    tools:context="com.example.myapplication.e.b.activity_disawar_home">

    <!-- Put Invisible Layout Here  -->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/rrrrr_appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_gradient_background"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/rrrrr_tool_bar_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_gradient_background"
            android:contentInsetStart="0dp"
            android:elevation="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="Gali Disawar"
            app:titleTextColor="@color/black_rrrrr"/>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rrrrr_internet_text_rrrrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warn_red_rrrrr"
        android:elevation="1dp"
        android:padding="5dp"
        android:text="@string/no_net_rrrrr"
        android:textColor="@color/white_rrrrr"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/main_gradient_background2"
        android:gravity="center"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/gali_disawar_game_rrrrr"
            android:textColor="@color/black_rrrrr"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_leftD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rrrrr_topText"
            android:text="@string/left_digit_rrrrr"
            android:textColor="@color/black_rrrrr"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_left_d_v_rrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rrrrr_topText"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black_rrrrr"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_right_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rrrrr_leftD"
            android:layout_marginVertical="8dp"
            android:text="@string/right_digit_rrrrr"
            android:textColor="@color/black_rrrrr"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_right_d_v_rrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rrrrr_leftD"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="8dp"
            android:textColor="@color/black_rrrrr"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_jodi_d_rrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rrrrr_right_d"
            android:text="@string/jodi_digit_rrrrr"
            android:textColor="@color/black_rrrrr"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_jodi_d_v_rrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rrrrr_right_d"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black_rrrrr"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rrrrr_chartTableBtn_rrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rrrrr_jodi_d_rrrrr"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/black_rrrrr"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:text="@string/chart_rrrrr"
            android:textColor="@color/white_rrrrr"
            app:cornerRadius="4dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rrrrr_bHisBtn_rrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/button_color1_rrrrr"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:text="@string/bid_his_rrrrr"
            android:textColor="@color/btn_txt2_rrrrr"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rrrrr_wHisBtn_rrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"
            android:backgroundTint="@color/button_color1_rrrrr"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"


            android:text="@string/win_his_rrrrr"
            android:textColor="@color/btn_txt2_rrrrr"
            app:cornerRadius="8dp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/rrrrr_swipe_ref_lyt_rrrrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rrrrr_recy_s_l_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/disawar_turnament_layout" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>