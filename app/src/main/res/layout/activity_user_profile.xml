<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_rrrrr"
    android:orientation="vertical"
    tools:context="com.example.myapplication.e.b.activity_user_profile">

    <!-- Put Invisible Layout Here  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/rrrrr_appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/rrrrr_toolbar_rrrrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_gradient_background"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:title="My Profile"
                app:titleTextColor="@color/black_rrrrr" />
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_dataConText_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warn_red_rrrrr"
            android:elevation="1dp"
            android:padding="5dp"
            android:text="@string/no_net_rrrrr"
            android:textColor="@color/white_rrrrr"
            android:visibility="gone" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/button_color1_rrrrr"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/main_gradient_background2"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="50dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/primary_theme_center_rrrrr"
                        android:src="@drawable/logo" />
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rrrrr_phone_num_rrrrr"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_bg"
                    android:backgroundTint="@color/transparent_rrrrr"
                    android:enabled="false"
                    android:inputType="number"
                    android:lines="1"
                    android:text="0000000000"
                    android:textColor="@color/black_rrrrr" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="editBtn"
                    android:src="@drawable/ic_pencil_icon_01"
                    android:tint="@color/black_rrrrr" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/name_rrrrr"
            android:textColor="@color/white_rrrrr"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rrrrr_user_name_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_edittext_focused"
            android:enabled="false"
            android:inputType="textPersonName|textCapWords"
            android:lines="1"
            android:padding="5dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white_rrrrr"
            android:textColorHint="@color/white_rrrrr" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/email_rrrrr"
            android:textColor="@color/white_rrrrr"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rrrrr_edit_txt_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_edittext_focused"
            android:enabled="false"
            android:hint="@string/enter_your_email_rrrrr"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:padding="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white_rrrrr"
            android:textColorHint="@color/white_rrrrr"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/phone_number_rrrrr"
            android:textColor="@color/black_rrrrr"
            android:textStyle="bold"
            android:visibility="gone" />


        <TextView
            android:id="@+id/rrrrr_suBtn_rrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_background"
            android:backgroundTint="@color/button_color1_rrrrr"
            android:onClick="updatBtn"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="@string/push_rrrrr"
            android:textAllCaps="true"
            android:textColor="@color/black_rrrrr"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:cornerRadius="0dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/rrrrr_progressBar_rrrrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>