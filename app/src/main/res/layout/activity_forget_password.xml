<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rrrrr_rl_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_background"
    android:orientation="vertical"
    tools:context="com.example.myapplication.e.b.activity_forget_password">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rrrrr_dataConText_rrrrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warn_red_rrrrr"
        android:elevation="1dp"
        android:padding="5dp"
        android:text="@string/no_net_rrrrr"
        android:textColor="@color/white_rrrrr"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="50dp"
            app:cardBackgroundColor="@color/transparent_rrrrr"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rrrrr_text_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="@color/edittextcolor_rrrrr"
            android:textSize="25sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rrrrr_phone_num_rrrrr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_edittext_focused2"
            android:drawableStart="@drawable/ic_phone_icon_01"
            android:drawablePadding="12dp"
            android:drawableTint="@color/edittextcolor_rrrrr"
            android:hint="@string/enter_mobile_number_rrrrr"
            android:inputType="number"
            android:maxLength="10"
            android:paddingHorizontal="30dp"
            android:paddingVertical="12dp"
            android:singleLine="true"
            android:textColor="@color/edittextcolor_rrrrr"
            android:textColorHint="@color/edittextcolor_rrrrr"
            android:textCursorDrawable="@drawable/ic_cursor"
            android:textStyle="bold"
            tools:targetApi="m" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/button_color1_rrrrr"
            android:onClick="sendOTP"
            android:paddingVertical="12dp"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:textColor="@color/btn_txt_rrrrr"
            android:textSize="18sp"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="30dp"
            android:backgroundTint="@color/button_color1_rrrrr"
            android:onClick="backToLogin"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:text="@string/back_login_rrrrr"
            android:textAllCaps="false"
            android:textColor="@color/btn_txt_rrrrr"
            android:textSize="18sp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/rrrrr_progressBar_rrrrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/edittextcolor_rrrrr"
        android:visibility="gone" />

</RelativeLayout>